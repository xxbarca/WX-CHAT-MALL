<view class="container">
    <l-grid l-class="inner-container">
        <block wx:key="grid" wx:for="{{grid}}">
            <l-grid-item bind:tap="onGotoDetail" data-id="{{item.root_category_id}}" key="{{index}}" slot="{{index}}">
                <view class="grid-item">
                    <image class="img" src="{{item.img}}" />
                    <text class="text">{{item.title}}</text>
                </view>
            </l-grid-item>
        </block>
    </l-grid>
</view>
