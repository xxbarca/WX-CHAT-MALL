<view class="container">

    <view class="icons">
        <view bind:tap="onGoToHome">
            <l-icon size="46" name="home" l-class="sleeve"></l-icon>
            <text>首页</text>
        </view>
        <view bind:tap="onGoToCart">
<!--            <l-icon size="46" name="cart" color="#157658"></l-icon>-->
            <l-badge max-count="500" number-type="limit" value="7000">
                <l-icon size="44" name="shopcart" l-class="sleeve"></l-icon>
            </l-badge>
            <text>购物车</text>
        </view>
    </view>

    <view bind:tap="onAddtoCart" class="cart btn-font"></view>
    <view bind:tap="onBuy" class="buy btn-font"></view>
</view>