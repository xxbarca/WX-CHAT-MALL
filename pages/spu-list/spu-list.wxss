.empty-container {
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
    width: 100%;
    height:800rpx;
    background-color: #f3f4f6;
}

.item-container {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    background: white;
    border: 1px solid red;
}

.item-container > image {
    width: 200rpx;
    height: 200rpx;
    border-top-left-radius: 15rpx;
    border-bottom-left-radius: 15rpx;
}

.item-container .desc {
    flex: 1;
    margin: 20rpx 0 20rpx 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}

.title {
    font-size: 30rpx;
    color: #666666;
}

.price-row {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.discount-price {
    margin-left: 20rpx;
}
