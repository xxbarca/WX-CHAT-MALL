<view class="container">
    <view class="search-container">
        <l-button
                icon="research"
                icon-size="24"
                icon-color="#C4C9D2"
                width="710"
                height="60"
                l-class="search-btn"
                bind:lintap="onGotoSearch"
                shape="square">
            搜索商品
        </l-button>
    </view>
    <view class="main">
        <l-segment
                active-key="{{defaultRootId}}"
                height="{{segHeight}}"
                even="{{false}}"
                item-height="90"
                width="160"
                scrollable
                bind:linchange="onSegChange"

                l-active-class="segment-item-active"
                l-inactive-class="segment-item"
                l-line-class="l-seg-line"
                placement="left">
            <block wx:for="{{roots}}" wx:key="{{index}}">
                <l-segment-item key="{{item.id}}" tab="{{item.name}}"></l-segment-item>
            </block>
        </l-segment>
        <view class="right">
            <s-sub-category bannerImg="{{currentBannerImg}}" categories="{{currentSubs}}"></s-sub-category>
        </view>
    </view>
</view>
